FROM registry.access.redhat.com/ubi8/ubi-minimal:8.8

LABEL maintainer="MinIO Inc <dev@min.io>"

COPY mc /usr/bin/
COPY CREDITS /licenses/CREDITS
COPY LICENSE /licenses/LICENSE

RUN  \
     microdnf update --nodocs --assumeyes && \
     microdnf install ca-certificates --nodocs --assumeyes && \
     microdnf install automake gcc libtool git --nodocs --assumeyes && \
     cd /tmp && git clone --recursive https://github.com/jqlang/jq.git && cd jq && \
     git checkout $(git describe --abbrev=0 --tags) && \
     autoreconf -i && \
     ./configure && \
     make && \
     microdnf clean all

ENTRYPOINT ["mc"]
